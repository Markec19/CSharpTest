@model IEnumerable<CSharpTest.Models.Employee>

<h2>Employees</h2>

<div class="container">
	<table class="table table-bordered">
	<thead class="table-light">
			<tr>
				<th>Name</th>
				<th>Total Time Worked</th>
			</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model)
			{
				var rowClass = employee.TimeWorked < 100 ? "low" : "";
				<tr class="@rowClass">
					<td>@employee.EmployeeName</td>
					<td>@employee.TimeWorked</td>
				</tr>
			}

	</tbody>
</table>
</div>

<div class="container">
	<h2>Total Time Worked Chart</h2>
	<img src="/Employee/PieChart" alt="Pie Chart" />
</div>


<style>
	.low td {
		background-color: #ffd6d6;
	}
</style>
